<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "xhtml11.dtd">
<html>

<head>
<script type="text/javascript" src="/javascripts/highslide/highslide.js"></script>
<script type="text/javascript" src="/javascripts/highslide/highslide-with-html.js"></script>
<script type="text/javascript">    
    hs.graphicsDir = '/javascripts/highslide/graphics/';
    hs.outlineType = 'drop-shadow';
	hs.captionEval = 'this.thumb.alt';
	hs.outlineWhileAnimating = true;
	hs.showCredits = false;
</script>	
  <%= stylesheet_link_tag 'highslide', :media => "screen" %>
  <%= stylesheet_link_tag 'highslide-with-html', :media => "screen" %>	
  <%= stylesheet_link_tag 'blueprint/screen978', :media => "screen" %>
  <%= stylesheet_link_tag 'rubycms', :media => "screen" %>
  <%= stylesheet_link_tag 'rubycms/imagetop.css', :media => "screen" %>
  <style type="text/css"> body {background-color: #ABB}</style>
  <%= stylesheet_link_tag 'blueprint/print', :media => "print" %>  	
  <!--<%= stylesheet_link_tag 'screen', :media => "screen" %>
  <%= stylesheet_link_tag 'print', :media => "print" %> --> 
  <title>Administration: <%= controller.action_name %></title>
  
  <!-- <%= stylesheet_link_tag 'formatting' %> -->   
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'scriptaculous' %>


</head>

<body>
<div class="hs-iframe">

<!--
<% url = params[:url] %>
url: <%= url %>
<% page = request.request_uri %>
page: <%= page %>
image: <%= @image.id if @image != nil %>
-->

<p style="color: green"><%= flash[:notice] %></p>

<div id="imagetopcap">
<%= render(:partial => 'imagetop') %> 
</div>	

<% if @upload_privileges == true %>
  <h3>File manager</h3>
  <% form_for(:imagetop, :url => {:controller => '/rubycms_imagetop', :action => :imagetop_upload, :path => params[:url]}, :html => { :multipart => true }) do |f| %>
    <p>
      <label for="uploaded_data"></label>
      <%= f.file_field :uploaded_data %>
    </p>
    <p>
      <%= submit_tag "Upload Top Image" %>
    </p>
  <% end %>
<% else %>
  <p>
  	<div class="notice">(No privileges to upload top image)</div>
  </p>
<% end %>

</div class="hs-iframe">
</body>
</html>   
