
<div id="loginpage">

	<p>Please log in:</p>
	
	<% form_tag do %>
		<p>
			<label for="name">Username:</label>
			<%= text_field_tag :name, params[:name] %>
		</p>
		<p>
			<label for="password">Password:</label>
			<%= password_field_tag :password, params[:password] %>
		</p>
		<p>
			<%= submit_tag "Login" %>
		</p>
	<% end %>			

</div>
